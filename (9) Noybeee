import javax.swing.*;

public class Noybeee {
    public static void main(String[] args) {
        int sum = 0, num;

        do {
            num = Integer.parseInt(JOptionPane.showInputDialog("Enter a number (0 to stop):"));
            sum += num;
        } while (num != 0);

        JOptionPane.showMessageDialog(null, "Sum = " + sum);
    }
}
